<div id="sure-modal-{{ item.id }}" class="modal hide fade">
    <div class="modal-header">
        <a href="#" class="close">&times;</a>
        <h3>Are you sure you want to delete this item?</h3>
    </div>

    <div class="modal-footer">
        <a href="{{ path(adminlist.getDeleteUrlFor(item)["path"], adminlist.getDeleteUrlFor(item)[("params")] ) }}" class="btn danger">Delete</a>
        <a onclick="javascript:$('#sure-modal-{{ item.id }}').modal('hide')" href="#" class="btn secondary">Cancel</a>
    </div>
</div>