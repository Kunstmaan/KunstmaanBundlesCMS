{% block urlchooser_widget %}
{% spaceless %}
    <div id="{{ id }}-widget" class="input-group">
        <input type="text" name="{{ full_name }}" value="{{ value|default('') }}" id="{{ id }}" class="form-control">
        <span class="input-group-btn">
            <button type="button" class="btn btn-default btn--raise-on-hover" data-toggle="modal" data-target="#{{ id }}-urlChooserModal" data-link="{{ path('KunstmaanNodeBundle_selecturl') }}">
                Choose
            </button>
        </span>
    </div>

    <!-- URL Chooser Modal -->
    <div class="js-ajax-modal modal fade" id="{{ id }}-urlChooserModal" role="dialog" aria-labelledby="urlChooserModal" aria-hidden="true" data-loaded="false" data-linked-input-id="{{ id }}">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <!-- Header -->
                <div class="modal-header">
                    <button class="close" data-dismiss="modal">
                        <i class="fa fa-times"></i>
                    </button>
                    <h3 class="modal-title" id="myModalLabel">
                        URL-Chooser
                    </h3>
                </div>

                <!-- Body -->
                <div class="js-ajax-modal-body modal-body ajax-modal__body"></div>
            </div>
        </div>
    </div>
{% endspaceless %}
{% endblock urlchooser_widget %}

{% block slug_widget %}
{% spaceless %}
    <div id="slug-chooser" class="input-group" data-url-prefix="{{ path('_slug', {'url': prefix|default('')})}}" data-reset="{{ reset }}">
        <input type="text" name="{{ full_name }}" id="slug-chooser__input" value="{{ value|default('') }}" class="form-control">
        <span class="input-group-btn">
            <button type="button" class="btn btn-default btn--raise-on-hover" id="slug-chooser__resetbtn">
                Reset
            </button>
        </span>
    </div>
    <small id="slug-chooser__preview" class="help-block"></small>
{% endspaceless %}
{% endblock slug_widget %}
