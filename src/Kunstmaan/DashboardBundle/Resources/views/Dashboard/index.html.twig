{% extends 'KunstmaanAdminBundle:Default:layout.html.twig' %}

{% block header %}{% endblock %}

{% block extracss %}
    {% stylesheets
    "@KunstmaanDashboardBundle/Resources/ui/scss/_dashboard.scss"
        filter="scss"
    %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css"/>
    {% endstylesheets %}
{% endblock %}

{% block content %}
    {% for widget in widgets %}
        {{ render_esi(url(widget.resolvedController, {'id' : id})) }}
    {% endfor %}
{% endblock %}

{% block extrajavascript %}
    {% javascripts
    '@KunstmaanDashboardBundle/Resources/ui/js/analytics/metrics.js'
    '@KunstmaanDashboardBundle/Resources/ui/js/analytics/tabs.js'
    '@KunstmaanDashboardBundle/Resources/ui/js/analytics/goals.js'
    '@KunstmaanDashboardBundle/Resources/ui/js/libs/morris-0.5.0.js'
    '@KunstmaanDashboardBundle/Resources/ui/js/libs/raphael-2.1.2.js'
    output='KunstmaanDashboardBundleAssets/js/ga-widget.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
