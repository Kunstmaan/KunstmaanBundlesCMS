{% extends 'KunstmaanAdminBundle:Default:layout.html.twig' %}

{% block body %}
        <header role="banner">
            <nav role="navigation" class="navbar navbar-inverse navbar-fixed-top">
                <div class="container-fluid">
                    <div class="navbar-header">

                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-nav-bar">
                            <span class="sr-only">Toggle</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                        <a class="navbar-brand" href="{{ path('KunstmaanAdminBundle_homepage') }}">
                            {{ websitetitle | trans }}
                        </a>

                    </div>
                </div>
            </nav>
        </header>
        <div class="container-full-height">
            <div class="login_form">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                     <div class="alert alert-warning">
                         <strong>{{ 'form.warning' | trans }}: </strong>
                         {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                         <a href="{{ path('fos_user_security_logout') }}">
                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                         </a>
                     </div>
                {% endif %}
                {% for key, messages in app.session.flashbag.all() %}
                    <div class="alert alert-info {{ key }}">
                        <button class="close" data-dismiss="alert">&times;</button>
                        {% for message in messages %}
                            {{ message|trans({}, 'FOSUserBundle') }}
                        {% endfor %}
                    </div>
                {% endfor %}

                {% block fos_user_content %}
                {% endblock fos_user_content %}
                {% block forgot_password_link %}
                    {% if 'resetting' not in app.request.pathInfo and 'profile' not in app.request.pathInfo %}
                        <a href="{{ path('fos_user_resetting_request') }}" class="forgot_password fadeInDownPw">{{ 'Forgot my password.' | trans }}</a>
                    {% endif %}
                {% endblock %}
            </div>
        </div>

        {% block footer %}
            <footer role="contentinfo" class="app__footer container-fluid">
                <a target="_blank" href="http://www.kunstmaan.be" class="app__footer__kunstmaan-link pull-right">
                    <img src="/bundles/kunstmaanadmin/default-theme/img/kunstmaan/kunstmaan_dark.svg" alt="Kunstmaan" />
                </a>
            </footer>
        {% endblock %}
{% endblock %}
