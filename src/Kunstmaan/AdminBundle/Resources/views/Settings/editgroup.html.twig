{% extends 'KunstmaanAdminBundle:Settings:index.html.twig' %}

{% block subbreadcrumb %}
	<li><a href="{{ path('KunstmaanAdminBundle_settings') }}">{{ 'settings.title' | trans }}</a></li>
    <li><a href="{{ path('KunstmaanAdminBundle_settings_groups') }}">{{ 'settings.groups' | trans }}</a></li>
	<li class="active">{{ 'settings.groups.edit' | trans }}</li>
{% endblock %}

{% block content %}

    <div class="page-header">
        <h1>{{ 'settings.groups.edit' | trans }}</h1>
    </div>

    <form action="{{ path('KunstmaanAdminBundle_settings_groups_edit', { 'group_id' : group.id }) }}" method="post" {{ form_enctype(form) }}>
    <fieldset>
    	{{ form_errors(form) }}
        <div class="clearfix">
            <label for="xlInput3">{{ 'settings.groups.name' | trans }}</label>
            <div class="input">
                {{ form_widget(form.name) }}
            </div>
        </div>

        <div class="clearfix">
            <label for="xlInput3">{{ 'settings.group.roles' | trans }}</label>
            <div class="input">
                {{ form_widget(form.rolescollection) }}
            </div>
        </div>

        {{ form_rest(form) }}
        <div class="actions">
            <input class="btn primary type" type="submit" value="{{ 'settings.groups.add' | trans }}">
            <input onclick="window.location = '{{ path('KunstmaanAdminBundle_settings_groups') }}'" type="reset" class="btn" value="{{ 'form.cancel' | trans }}" />
        </div>
    </fieldset>
</form>

{% endblock %}
