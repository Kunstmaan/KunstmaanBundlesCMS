{% set adminmenu = admin_menu_get() %}
{% set extraclasshtml %}{% block extraclasshtml %}{% endblock %}{% endset %}

<!DOCTYPE html>
<html class="no-js {{ extraclasshtml }}" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="robots" content="noindex, nofollow">

    <title>{% block title %}{{ websitetitle | trans }}{% endblock %}</title>

    <!-- Favicons -->
    {% include "KunstmaanAdminBundle:Default:_favicons.html.twig" %}

    <!-- Styles -->
    {% include "KunstmaanAdminBundle:Default:_css.html.twig" %}

    <!-- JS -->
    {% include "KunstmaanAdminBundle:Default:_js_header.html.twig" %}
</head>

<body {% block extraparamsinbody %}{% endblock %} class="app">
{% block body %}
    <!-- Header -->
    {% include "KunstmaanAdminBundle:Default:app_header.html.twig" %}


    <!-- Main Content -->
    <main role="main" class="container-fluid app__main">

        <!-- Sidebar -->
        {% block sidebar %}
            {% include "KunstmaanAdminBundle:Default:sidebar.html.twig" %}
        {% endblock %}


        <!-- Content Wrap -->
        <div id="main_content" class="app__content">

            <!-- Breadcrumb -->
            {% block breadcrumb %}
                {% set breadcrumbitems = adminmenu.breadcrumb %}
                {% if breadcrumbitems | length > 0 %}
                    <ul class="breadcrumb">
                        {% for breadcrumbitem in breadcrumbitems %}
                        {% if loop.last %}
                            <li class="active">
                                {{ breadcrumbitem.label | trans }}
                            </li>
                        {% else %}
                            <li>
                               {% if  breadcrumbitem.route %}
                                    <a href="{{ path(breadcrumbitem.route, breadcrumbitem.routeparams) }}">
                                        {{ breadcrumbitem.label | trans }}
                                    </a>
                               {% else %}
                                    <span>
                                        {{ breadcrumbitem.label | trans }}
                                    </span>
                               {% endif %}
                            </li>
                        {% endif %}
                        {% endfor %}
                    </ul>
                {% endif %}
            {% endblock %}


            <!-- Messages -->
            {% for flashMessageType, flashMessages in app.session.flashbag.all() %}
                {% for flashMessage in flashMessages %}
                    <div class="alert alert-{{ flashMessageType }}">
                        <button type="button" class="close" data-dismiss="alert">Ã—</button>
                        <strong>{{ flashMessageType | capitalize }}:</strong> {{ flashMessage }}
                    </div>
                 {% endfor %}
            {% endfor %}
            {% block messages %}{% endblock %}


            <!-- Content-header -->
            {% block header %}
                <div class="page-header">
                    {% if adminmenu.current %}
                        <h1>
                            {{ adminmenu.current.label | trans }}
                            {% block page_header_addition %}{% endblock %}
                        </h1>
                    {% endif %}
                    {% block extra_actions_header %}{% endblock %}
                </div>
            {% endblock %}


            <!-- Content -->
            {% block content %}{% endblock %}
        </div>
    </div>


    <!-- Footer -->
    {% block footer %}
        <footer role="contentinfo" class="app__footer container-fluid">
            <a target="_blank" href="http://www.kunstmaan.be" class="app__footer__kunstmaan-link pull-right">
                <img src="/admin/img/general/kunstmaan_dark.svg" alt="Kunstmaan" />
            </a>
        </footer>
    {% endblock %}
{% endblock %}


    <!-- JS -->
    {% include "KunstmaanAdminBundle:Default:_js_footer.html.twig" %}


    <!-- JS - Extra -->
    {% block extrajavascript %}{% endblock %}
</body>
</html>
