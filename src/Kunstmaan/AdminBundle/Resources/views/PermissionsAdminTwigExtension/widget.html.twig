<div id="permissionChangesInfo"></div>
<div id="permissionChangesModal" class="modal hide">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">Ã—</button>
        <h3>{{ 'Permission changes'|trans }}</h3>
    </div>
    <div class="modal-body"></div>
</div>

<div class="permissionscontainer">
{% spaceless %}
    <table class="table table-bordered table-striped">
        <thead>
           <tr>
               <th>Rollname</th>
                {% for permissionName in permissionadmin.getPossiblePermissions() %}
                    <th>{{ permissionName }}</th>
                {% endfor %}
           </tr>
        </thead>
        <tbody>
            {% for role in permissionadmin.getAllRoles() %}
	            <tr>
	                <td>
	                    {{ role.getRole() }}
	                </td>
	                {% set permission = permissionadmin.getPermission(role) %}
	                {% for permissionName in permissionadmin.getPossiblePermissions() %}
		                <td>
		                    <input type="checkbox" name="permissions[{{ role.getRole() }}][{{ permissionName }}]" {% if permission is not null and permission.has(permissionName) %}checked="checked"{% endif %} onchange="permissionChange('{{ role.getRole() }}', '{{ permissionName }}', this, {% if permission is not null and permission.has(permissionName) %}true{% else %}false{% endif %})"/>
		                </td>
	                {% endfor %}
	            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endspaceless %}
</div>

<script type="text/javascript">
    var changes = new Array();
    changes['add'] = new Array();
    changes['del'] = new Array();

    function permissionChange(role, permission, checkbox, origValue)
    {
        if (origValue == checkbox.checked) {
            // Remove change...
            if (origValue) {
                var idx = changes['del'].indexOf(role + '.' + permission);
                if (idx != -1) {
                    changes['del'].splice(idx, 1);
                }
            } else {
                var idx = changes['add'].indexOf(role + '.' + permission);
                if (idx != -1) {
                    changes['add'].splice(idx, 1);
                }
            }
        } else {
            // New change
            if (checkbox.checked) {
                changes['add'].push(role + '.' + permission);
            } else {
                changes['del'].push(role + '.' + permission);
            }
        }

        // Display changes in div?
        html = '';
        if (changes['add'].length > 0) {
            html = html + '<p>{{ "The following permissions will be <strong>added</strong>:"|trans|raw }}';
            html = html + '<ul>';
            for (var i=0; i<changes['add'].length; i++) {
                var params = changes['add'][i].split('.');
                html = html + '<li><strong>' + params[0] + '</strong> : ' + params[1] +
                        '<input type="hidden" name="permissionChanges[' + params[0] + '][ADD][]" value="' + params[1] + '"></li>';
            }
            html = html + '</ul>';
            html = html + '</p>';

        }
        if (changes['del'].length > 0) {
            html = html + '<p>{{ "The following permissions will be <strong>removed</strong>:"|trans|raw }}';
            html = html + '<ul>';
            for (var i=0; i<changes['del'].length; i++) {
                var params = changes['del'][i].split('.');
                html = html + '<li><strong>' + params[0] + '</strong> : ' + params[1] +
                        '<input type="hidden" name="permissionChanges[' + params[0] + '][DEL][]" value="' + params[1] + '"></li>';
            }
            html = html + '</ul>';
            html = html + '</p>';
        }
        if (html != '') {
            modalInfo = '<p>{{ "You have made changes to the permissions on this page."|trans|raw }}</p><p><label class="checkbox"><input type="checkbox" id="applyRecursive" name="applyRecursive" value="1"> {{ "Apply these changes recursively on all child pages"|trans|raw }} (<a href="#permissionChangesModal" data-toggle="modal">{{ "Review your changes"|trans|raw }}</a>)</label></p>';
            // Update modal body
            var modalBody = jQuery("#permissionChangesModal").find('.modal-body');
            modalBody.html(html);
            // Display info alert
            jQuery("#permissionChangesInfo").html(modalInfo);
            jQuery("#permissionChangesInfo").addClass('alert alert-info');
            jQuery("#permissionChangesInfo").show();
        } else {
            jQuery("#permissionChangesInfo").html('');
            jQuery("#permissionChangesInfo").removeClass('alert alert-info')
            jQuery("#permissionChangesInfo").hide();
        }
    }
</script>