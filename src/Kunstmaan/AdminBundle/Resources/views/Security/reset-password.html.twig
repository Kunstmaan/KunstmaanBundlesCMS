{% extends '@KunstmaanAdmin/layout.html.twig' %}

{% block login_content %}
<p>
    {{ 'Reset password' |trans }}
</p>

{{ form_start(form) }}
    <div class="form-group form-group--icon-in-control">
        <label for="password_request_email" class="label--lighter">
            {{ 'email' |trans }}:
        </label>

        {{ form_widget(form.email) }}
        <i class="fa fa-user form-group--icon-in-control__icon"></i>
    </div>

    {{ form_row(form.submit) }}
    <a href="{{ path('cms_login' ) }}" class="btn btn-default btn--raise-on-hover">
        {{ 'form.cancel' | trans }}
    </a>
    {{ form_rest(form) }}
{{ form_end(form) }}

{% endblock login_content %}
