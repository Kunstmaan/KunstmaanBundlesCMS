{% set bikes = get_bikes() %}
{% if bikes|length > 0 %}
    <div class="bikeslist-pp">
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>{{ 'bike.type'|trans|capitalize }}</th>
                    <th>{{ 'bike.brand'|trans|capitalize }}</th>
                    <th>{{ 'bike.model'|trans|capitalize }}</th>
                    <th>{{ 'bike.price'|trans|capitalize }} (EUR)</th>
                </tr>
                </thead>
                <tbody>
                {% for bike in bikes %}
                <tr>
                    <td>{{ ('bike.' ~ bike.type)|trans }}</a></td>
                    <td>{{ bike.brand }}</td>
                    <td>{{ bike.model }}</td>
                    <td>{{ bike.price }}</td>
                <tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endif %}
