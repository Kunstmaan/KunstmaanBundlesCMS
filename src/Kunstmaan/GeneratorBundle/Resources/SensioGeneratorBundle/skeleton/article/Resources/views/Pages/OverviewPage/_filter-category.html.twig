{% if categories|length > 0 %}
    <button type="button" class="btn btn--secondary blog-filter__top__section js-toggle-btn {% if activeCategories is defined %} toggle-btn--active{% endif %} blog-filter__top__section--clickable" data-target="#blog-categories" data-level="main" data-hide-others="true">
        {{ 'article_overview_page.category'|trans }}
        <i class="icon icon--triangle-down blog-filter__top__section__icon toggle-btn__icon--show"></i>
        <i class="icon icon--triangle-up blog-filter__top__section__icon toggle-btn__icon--hide"></i>
    </button>
{% endif %}