<div class="kds-color">
    <div class="kds-color__color" style="background: {{ this.hex }};">
        <div class="kds-color__color__text">{{ this.description }}</div>
    </div>
    <div class="kds-color__description">
        <h5 class="kds-color__description__title">{{ this.name }}</h5>
        <small class="kds-color__description__value">HEX {{ this.hex }}</small>
        <small class="kds-color__description__value">RGB {{ this.rgb }}</small>
    </div>
</div>
