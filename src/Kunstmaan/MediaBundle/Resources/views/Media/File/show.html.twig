{% extends '@KunstmaanMedia/Media/show.html.twig' %}

{% block extraactions %}
    <a href="{{ asset(media.url) }}" target="_blank" class="btn btn-primary btn--raise-on-hover">
        {{ 'media.media.download.action'|trans }}
    </a>
{% endblock %}

{% block preview %}{% endblock %}

{% block mediainfo %}
    {{ parent() }}
    <dt>
        {{ 'media.media.mediainfo.downloadlink'|trans }}:
    </dt>
    <dd>
        {% set mediaUrl = media.url %}
        <a href="{{ absolute_url(asset(mediaUrl)) }}" target="_blank">
            {{ absolute_url(asset(mediaUrl)) }}
        </a>
    </dd>
{% endblock %}
