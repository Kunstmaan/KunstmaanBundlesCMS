{% extends 'KunstmaanMediaBundle:Default:layout.html.twig' %}

{% block subsidebar %}
    {% include 'KunstmaanMediaBundle:Gallery:sidebar.html.twig' %}
{% endblock %}

{% block subbreadcrumb %}
    <li><a href="{{ path('KunstmaanMediaBundle_media_files') }}">File Galleries</a> <span class="divider">/</span></li>
    <li><a href="{{ path('KunstmaanMediaBundle_filegallery_show', { 'id' : gallery.id, 'slug' : gallery.slug } ) }}">{{ gallery.name }}</a> <span class="divider">/</span></li>
	<li class="active">Add new picture to "{{ gallery.name }}"</li>
{% endblock %}

{% block title %}New file{% endblock%}

{% block content %}
    <h1>Add new file <small>to "{{ gallery.name }}"</small></h1>
    {% include 'KunstmaanMediaBundle:File:form.html.twig' with { 'form': form } %}
{% endblock %}