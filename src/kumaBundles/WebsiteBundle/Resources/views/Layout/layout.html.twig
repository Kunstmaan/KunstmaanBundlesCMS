{% spaceless %}<!DOCTYPE html>
{% set htmlLocale = app.request.locale|default(defaultlocale)|slice(0,2) %}
<!--[if lte IE 9]> <html class="no-js lt-ie9" lang="{{ htmlLocale }}"> <![endif]-->
<!--[if gt IE 9]><!--> <html lang="{{ htmlLocale }}"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>
    {% set node = null %}
    {% if nodetranslation is defined %}
        {% set node = nodetranslation.node %}
    {% endif %}
    {% set nodemenu = get_node_menu(app.request.locale, node) %}
    {{ websitetitle | trans }}{% block title %}{% if page is defined and nodemenu.getActiveForDepth(2) is not null %} - {{ get_title_for(page) }}{% endif %}{% endblock %}
    </title>

    {% if page is defined %}
        {{ render_seo_metadata_for(page) }}
    {% endif %}

    {# Favicons #}
    {% include '@kumasWebsite/Layout/_favicons.html.twig' %}

    {# Webfonts #}
    {% include 'kumaBundlesWebsiteBundle:Layout:_webfonts.html.twig' %}

    {# CSS #}
    {% include '@kumasWebsite/Layout/_css.html.twig' %}
</head>

<body id="sidebar-toggle-container" class="sidebar-toggle-container{% block extra_body_classes %}{% endblock %}" {% block extra_body_attributes %}{% endblock %}>
    {# Google Tagmanager #}
    {% include '@kumasWebsite/Layout/_googletagmanager.html.twig' %}

    {# Outdated browser message #}
    {% include '@kumasWebsite/Layout/_outdatedbrowser.html.twig' %}


    {# Header #}
    {% block header %}
        {% include '@kumasWebsite/Layout/_header.html.twig' %}
    {% endblock %}

    {# Breadcrumbs #}
    {% block breadcrumbs %}
        {% include '@kumasWebsite/Layout/_breadcrumbs.html.twig' %}
    {% endblock %}

    {# Content #}
    <main role="main">
        {% block content %}{% endblock %}
    </main>

    {# Footer #}
    {% block footer %}
        {% include '@kumasWebsite/Layout/_footer.html.twig' %}
    {% endblock %}


    {# Cookieconsent #}
    {% block cookieconsent %}
        {% include '@kumasWebsite/Layout/_cookieconsent.html.twig' %}
    {% endblock %}

    {# JS Footer #}
    {% include '@kumasWebsite/Layout/_js_footer.html.twig' %}
</body>
</html>
{% endspaceless %}
